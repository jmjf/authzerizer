{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 18 + Strictest",
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "commonjs",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		//"exactOptionalPropertyTypes": true, // causes issues with typeorm datasource
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		//"noPropertyAccessFromIndexSignature": true,  // causes issues with typeorm datasource
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"importsNotUsedAsValues": "error",
		"checkJs": true,

		"rootDir": "./src",
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"types": ["node", "jest"],
		"resolveJsonModule": true,
		"outDir": "./dist",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictBindCallApply": false,
		// typeorm
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false, // required for entity markup
		"sourceMap": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["./src/*.ts", "./src/**/*.ts"],
	"exclude": [
		"./node_modules",
		"./node_modules/@types",
		"./dist",
		"./src/**/*.spec.ts"
	]
}
